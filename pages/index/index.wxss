/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.logo {
  width: 100px;
  height: 100px;
  border-radius: 20px;
}
.slots{
  margin-top: 5px; 

}
.slot{
  display: inline-block;
  width: 5px;
  height: 5px;
  margin-right: 5px;
  background: gray;
  border-radius: 50%;
}
.slot.active{
  background: red;
}